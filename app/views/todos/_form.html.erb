<%= form_with model: todo do |form| %>
<div>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
  <% todo.errors.full_messages_for(:title).each do
  |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :body %><br >
  <%= form.text_area :body %>
  <% todo.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :status %><br>
  <%= form.select :status, ['Next Up', 'In Progress', 'Completed'], selected: 'Next Up'%>
</div>

<div>
  <%= form.label :priority %><br>
  <%= form.select :priority, ['Low', 'Medium', 'High'], selected: 'Low' %>
</div>

<div><%= form.submit %></div>
<% end %>
